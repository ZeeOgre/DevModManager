<Window x:Class="ZO.DMM.AppNF.UpdatedFilesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Updated Files" Height="450" Width="800">
    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" Margin="10">
            <UniformGrid x:Name="FilesGrid" Columns="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <!-- List of file items with checkboxes will be added dynamically -->
            </UniformGrid>
        </ScrollViewer>
        <Button Content="OK" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Width="75" Click="OkButton_Click"/>
    </Grid>
</Window>
