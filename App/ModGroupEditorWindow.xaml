<Window x:Class="DevModManager.App.ModGroupEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DevModManger - ModGroup Editor" Height="400" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Group Description:" FontWeight="Bold"/>
            <TextBox x:Name="DescriptionTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Plugin IDs (comma-separated):" FontWeight="Bold"/>
            <TextBox x:Name="PluginIDsTextBox" Margin="0,0,0,10" TextChanged="PluginIDsTextBox_TextChanged"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Save" Width="75" Margin="5" Click="SaveButton_Click"/>
                <Button Content="Cancel" Width="75" Margin="5" Click="CancelButton_Click"/>
            </StackPanel>

            <TextBlock Text="Plugins:" FontWeight="Bold" Margin="0,10,0,0"/>
            <ListBox x:Name="PluginsListBox"/>
        </StackPanel>
    </Grid>
</Window>
