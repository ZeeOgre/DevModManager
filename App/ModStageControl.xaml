<UserControl x:Class="DevModManager.App.ModStageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DevModManager.App">
    <StackPanel Orientation="Horizontal" Margin="0">
        <ComboBox x:Name="SourceStageComboBox" Width="115" Margin="5,0" 
                  ItemsSource="{Binding SourceStages}" 
                  Text="** SOURCE **" />
        <ComboBox x:Name="DestinationStageComboBox" Width="115" Margin="5,0" 
                  ItemsSource="{Binding DestinationStages}" 
                  Text="** DESTINATION **" />
        <Button Content="Promote" Width="65" Margin="5,0" Click="PromoteButton_Click"/>
    </StackPanel>
</UserControl>
